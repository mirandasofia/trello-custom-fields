{
  "manifestVersion": 1,
  "name": "Campos Personalizados",
  "description": "Um Power-Up para adicionar campos personalizados ao Trello.",
  "author": "Sofia",
  "icon": {
    "url": "https://mirandasofia.github.io/index.html"
  },
  "iframeConnectorUrl": "https://mirandasofia.github.io/index.html/",
  "allowedOrigins": [
    "https://trello.com"
  ],
  "capabilities": [
    "board-buttons",
    "card-buttons",
    "card-back-section"
  ]
  "fields": [
    {
      "id": "1",
      "name": "Prioridade",
      "type": "dropdown",
      "options": ["Alta", "Média", "Baixa"]
    },
    {
      "id": "2",
      "name": "Data Prevista",
      "type": "date"
    },
    {
      "id": "3",
      "name": "Responsável",
      "type": "text"
    }
  ]
}
